{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "osDiskVhdUri": {
      "type": "string",
      "metadata": {
        "description": "Uri of the existing VHD"
      }
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_A2",
      "metadata": {
        "description": "Size of the VM"
      }
    },
    "vmName": {
      "type": "string",
      "defaultValue": "BSI-Azure-VM",
      "metadata": {
        "description": "Name of the VM"
      }
    },
	"virtualNetworkName": {
      "type": "string",
      "metadata": {
        "description": "Name of the virtual network"
      }
    },
	"subnetName": {
      "type": "string",
      "defaultValue": "Default",
      "metadata": {
        "description": "Name of the subnet"
      }
    }
  },
  "variables": {
    "api-version": "2015-06-15",
    "addressPrefix": "10.0.0.0/16",
	"subnetName": "Subnet",
	"subnetPrefix": "10.0.0.0/24",
    "vnetID": "[resourceId('Microsoft.Network/virtualNetworks',parameters('virtualNetworkName'))]",
    "subnetRef": "[concat(variables('vnetID'),'/subnets/',parameters('subnetName'))]",
    "nicName": "BSIVMNic"
  },
  "resources": [
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "BSI-NIC",
      "location": "northeurope",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "/subscriptions/f8f2773d-de63-45a3-a568-0edb32155a0b/resourceGroups/hub/providers/Microsoft.Network/virtualNetworks/rpa-hub-nonprod/subnets/bastion"
              }
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "BSI-VM",
      "location": "northeurope",
      "plan": {
        "name": "kali",
        "product": "kali-linux",
        "publisher": "kali-linux"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "Standard_B2s"
        },
        "storageProfile": {
          "osDisk": {
            "name": "/subscriptions/f8f2773d-de63-45a3-a568-0edb32155a0b/resourceGroups/bsi-pen-testing/providers/Microsoft.Compute/disks/bsi-disk",
            "osType": "Linux",
            "caching": "ReadWrite",
            "vhd": {
              "uri": "https://bsipentesting.blob.core.windows.net/image/BSI-azure-kali.vhd"
            },
            "createOption": "Attach"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]"
            }
          ]
        }
      }
    }
  ]
}
